mixin row(q1, q2, num)
    div(class='row', id='row'+num)
        div(class='q with_border', id='q_num'+(+num*2+1))=q1
        div(class='mid with_border', id='mid_num'+num) hello
        div(class='q with_border', id='q_num'+(+num*2+2))=q2

mixin questions(N, q_l)
    -var i = 0
    -var c = 1
    while i < N
        -var j = 1 + i
        while j < N
            +row(q_l[i], q_l[j++], c++)
        -i++

