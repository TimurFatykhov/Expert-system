mixin row(q1, q2, num)
    div(class='row', id='row'+num)
        div(class='q with_border', id='q_'+ num + '_left')=q1
        div(class='mid with_border', id='mid_'+num) Both
        div(class='q with_border', id='q_'+ num + '_right')=q2

mixin questions(N, q_l)
    -var i = 0
    -var c = 1
    while i < N
        -var j = 1 + i
        while j < N
            +row(q_l[i], q_l[j++], c++)
        -i++

