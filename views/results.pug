mixin m_titles(N)
    tr
    th=' '
    -var i = 1
    while i <= N
        th='Z'+i++

mixin matrix(N)
    -var i = 1
    table
        +m_titles(N)
        while i <= N
            -var j = 1
            tr
            td='Z'+i++
            while j <= N
                td(id='cell'+((i-2)*N+j))=(i-2)*N+j++

mixin results(N)
    table(class='questions')
        tr
            th=' '
            th='Questions'
        -var i = 1
        while i <= N
            tr
                td(id='q_num'+(+i+1))='Z'+i
                td(id='quest'+(i++))

